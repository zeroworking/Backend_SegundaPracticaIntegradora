<div class="container">
    <h1>Productos Paginados con Filtro de tipo (page,limit,category,sort)</h1>
    <h2>consulta de ejemplo:</h2>
    <h3>http://localhost:8080/?page=2&limit=3&sort=desc&category=cat2</h3>
    <hr>
    {{#if isValid}}
    <div>
        {{#each docs}}
            <div>           
                <div>Título: {{this.title}}<br>
                Descripción: {{this.description}}<br>
                Código: {{this.code}}<br>
                Precio: {{this.price}}<br>
                Stock: {{this.stock}}<br>
                Categoría: {{this.category}}<br>
                Imágenes: {{this.thumbnails}}<br>
                Estado: {{this.status}} </div>                  
            </div>
        <hr>
        {{/each}}
    </div>
    <br />

    <div>
        {{#if hasPrevPage}}
        <a href={{this.prevLink}}>
            << Anterior </a>
                {{/if}}

                {{!-- numero de pagina --}}
                &nbsp;
                {{this.page}}
                &nbsp;

                {{#if hasNextPage}}
                <a href={{this.nextLink}}>
                    Siguiente >> </a>
                {{/if}}

    </div>
    {{else}}
    <h1>No hay productos para mostrar</h1>
    {{/if}}
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>





